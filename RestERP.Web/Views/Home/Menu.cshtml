@{
    ViewData["Title"] = "Menüler";
}

@using RestERP.Infrastructure.Data.SeedData
@using RestERP.Domain.Entities
@using System.Collections.Generic

<div class="restaurant-menu">
    <div class="menu-header">
        <h1>RestERP Restaurant</h1>
        <div class="divider">
            <span>✦</span>
        </div>
        <h2>Menümüz</h2>
    </div>

    <div class="menu-container">
        @{
            var categories = FoodCategorySeedData.GetFoodCategories();
            var subCategories = FoodSeedData.GetFood();
        }

        @foreach (var category in categories)
        {
            <div class="category">
                <div class="category-header" onclick="toggleCategory(@category.Id)">
                    <h3>@category.TurkishName</h3>
                    <div class="toggle-icon">+</div>
                </div>
                <div class="subcategory-container" id="category-@category.Id">
                    <table class="subcategory-table">
                        <tbody>
                            @foreach (var subCategory in subCategories.Where(s => s.CategoryId == category.Id))
                            {
                                <tr>
                                    <td class="subcategory-name">
                                        <div class="sub-item">
                                            <div class="food-info">
                                                <span class="food-title">@subCategory.TurkishName</span>
                                                <span class="food-description">@subCategory.Description</span>
                                            </div>
                                            <div class="quantity-control">
                                                <button class="quantity-btn minus" onclick="decreaseQuantity(@subCategory.Id)">-</button>
                                                <span id="quantity-@subCategory.Id" class="quantity-value">0</span>
                                                <button class="quantity-btn plus" onclick="increaseQuantity(@subCategory.Id)">+</button>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="subcategory-price">@subCategory.Price ₺</td>
                                    <td class="subcategory-image">
                                        @if(category.Id == 1) 
                                        {
                                            var breakfastImages = new Dictionary<int, (string Path, string Alt)>
                                            {
                                                { 1, ("/img/Food/Breakfast/KahvaltiTabagi.jpg", "Kahvaltı Tabağı") },
                                                { 2, ("/img/Food/Breakfast/SerpmeKahvalti.jpg", "Serpme Kahvaltı") },
                                                { 3, ("/img/Food/Breakfast/PeynirTabagi.jpeg", "Peynir Tabağı") },
                                                { 4, ("/img/Food/Breakfast/ZeytinTabagi.jpeg", "Zeytin Tabağı") },
                                                { 5, ("/img/Food/Breakfast/Omlet.jpg", "Omlet") },
                                                { 6, ("/img/Food/Breakfast/KasarliOmlet.jpg", "Kaşarlı Omlet") },
                                                { 7, ("/img/Food/Breakfast/KarisikOmlet.jpg", "Karışık Omlet") },
                                                { 8, ("/img/Food/Breakfast/Menemen.jpg", "Menemen") },
                                                { 9, ("/img/Food/Breakfast/SucukluYumurta.jpeg", "Sucuklu Yumurta") },
                                                { 10, ("/img/Food/Breakfast/Mihlama.jpg", "Mıhlama") },
                                                { 11, ("/img/Food/Breakfast/PastirmaliYumurta.jpg", "Pastırmalı Yumurta") },
                                                { 12, ("/img/Food/Breakfast/SahandaSucuk.jpg", "Sahanda Sucuk") },
                                                { 13, ("/img/Food/Breakfast/PatatesTava.jpg", "Patates Tava") },
                                                { 14, ("/img/Food/Breakfast/MiniKalemBoregi.jpg", "Mini Kalem Boreği") },
                                                { 15, ("/img/Food/Breakfast/BalKaymak.jpg", "Bal Kaymak") },
                                                { 16, ("/img/Food/Breakfast/TereyagiPorsiyonu.jpg", "Tereyağı Porsiyonu") },
                                                { 17, ("/img/Food/Breakfast/SogusTabagi.jpg", "Söğüş Tabağı") },
                                                { 18, ("/img/Food/Breakfast/MeyveTabagi.jpg", "Meyve Tabağı") }
                                            };

                                            if (breakfastImages.TryGetValue(subCategory.Id, out var imageInfo))
                                            {
                                                <div class="food-image-container">
                                                    <img src="@imageInfo.Path" alt="@imageInfo.Alt" class="food-image">
                                                </div>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <div class="menu-footer">
        <div class="divider">
            <span>❦</span>
        </div>
        <p>Afiyet Olsun</p>
        <div class="cart-summary">
            <h3>Sepet Özeti</h3>
            <div id="cartItemsContainer">
                <p class="empty-cart-message">Sepetinizde ürün bulunmamaktadır.</p>
                <div id="cartItems"></div>
            </div>
            <div class="cart-total">
                <span>Toplam:</span>
                <span id="cartTotal">0.00 ₺</span>
            </div>
        </div>
        
        <div class="customer-info-panel">
            <div class="panel-tabs">
                <button class="tab-btn active" data-tab="dine-in">Restoranda</button>
                <button class="tab-btn" data-tab="takeaway">Paket Servis</button>
                <button class="tab-btn" data-tab="delivery">Eve Teslimat</button>
            </div>
            
            <div class="tab-content">
                <div class="tab-pane active" id="dine-in">
                    <div class="form-group">
                        <label for="tableNumber">Masa Numarası:</label>
                        <input type="number" id="tableNumber" min="1" placeholder="Masa No">
                    </div>
                </div>
                
                <div class="tab-pane" id="takeaway">
                    <div class="form-group">
                        <label for="customerName">Ad Soyad:</label>
                        <input type="text" id="customerName" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group">
                        <label for="customerPhone">Telefon:</label>
                        <input type="tel" id="customerPhone" placeholder="Telefon">
                    </div>
                    <div class="form-group">
                        <label for="pickupTime">Teslim Alma Zamanı:</label>
                        <input type="time" id="pickupTime">
                    </div>
                </div>
                
                <div class="tab-pane" id="delivery">
                    <div class="form-group">
                        <label for="deliveryName">Ad Soyad:</label>
                        <input type="text" id="deliveryName" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group">
                        <label for="deliveryPhone">Telefon:</label>
                        <input type="tel" id="deliveryPhone" placeholder="Telefon">
                    </div>
                    <div class="form-group">
                        <label for="deliveryAddress">Adres:</label>
                        <textarea id="deliveryAddress" placeholder="Adres"></textarea>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label for="orderNote">Sipariş Notu:</label>
                <textarea id="orderNote" placeholder="Siparişiniz ile ilgili eklemek istediğiniz notlar..."></textarea>
            </div>
            
            <div class="auth-buttons">
                <button id="loginBtn" class="secondary-button">Giriş Yap</button>
                <button id="registerBtn" class="secondary-button">Üye Ol</button>
            </div>
            
            <button id="orderButton" class="order-button">Sipariş Ver</button>
        </div>
    </div>
</div>

<!-- Giriş Yap Modal -->
<div class="modal" id="loginModal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h3>Giriş Yap</h3>
        <div class="form-group">
            <label for="loginEmail">E-posta:</label>
            <input type="email" id="loginEmail" placeholder="E-posta adresiniz">
        </div>
        <div class="form-group">
            <label for="loginPassword">Şifre:</label>
            <input type="password" id="loginPassword" placeholder="Şifreniz">
        </div>
        <button id="loginSubmitBtn" class="order-button">Giriş Yap</button>
        <div class="form-links">
            <a href="#" id="forgotPasswordLink">Şifremi Unuttum</a>
            <a href="#" id="showRegisterLink">Üye Ol</a>
        </div>
    </div>
</div>

<!-- Üye Ol Modal -->
<div class="modal" id="registerModal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h3>Üye Ol</h3>
        <div class="form-group">
            <label for="registerName">Ad Soyad:</label>
            <input type="text" id="registerName" placeholder="Ad Soyad">
        </div>
        <div class="form-group">
            <label for="registerEmail">E-posta:</label>
            <input type="email" id="registerEmail" placeholder="E-posta adresiniz">
        </div>
        <div class="form-group">
            <label for="registerPhone">Telefon:</label>
            <input type="tel" id="registerPhone" placeholder="Telefon">
        </div>
        <div class="form-group">
            <label for="registerPassword">Şifre:</label>
            <input type="password" id="registerPassword" placeholder="Şifreniz">
        </div>
        <div class="form-group">
            <label for="registerPasswordConfirm">Şifre Tekrar:</label>
            <input type="password" id="registerPasswordConfirm" placeholder="Şifrenizi tekrar girin">
        </div>
        <button id="registerSubmitBtn" class="order-button">Üye Ol</button>
        <div class="form-links">
            <a href="#" id="showLoginLink">Giriş Yap</a>
        </div>
    </div>
