<script>
    function toggleCategory(categoryId) {
        const container = document.getElementById(`category-${categoryId}`);
        const header = container.previousElementSibling;
        
        if (container.style.maxHeight) {
            container.style.maxHeight = null;
            header.classList.remove('category-active');
        } else {
            container.style.maxHeight = container.scrollHeight + "px";
            header.classList.add('category-active');
        }
    }

    function increaseQuantity(subCategoryId) {
        const quantityElement = document.getElementById(`quantity-${subCategoryId}`);
        let quantity = parseInt(quantityElement.innerText);
        quantityElement.innerText = quantity + 1;
        updateCart();
        event.stopPropagation();
    }

    function decreaseQuantity(subCategoryId) {
        const quantityElement = document.getElementById(`quantity-${subCategoryId}`);
        let quantity = parseInt(quantityElement.innerText);
        if (quantity > 0) {
            quantityElement.innerText = quantity - 1;
            updateCart();
        }
        event.stopPropagation();
    }

    function updateCart() {
        const cartItems = document.getElementById('cartItems');
        const cartItemsContainer = document.getElementById('cartItemsContainer');
        const emptyCartMessage = document.querySelector('.empty-cart-message');
        const cartTotalElement = document.getElementById('cartTotal');
        
        let items = [];
        let total = 0;
        
        // Tüm ürünleri topla
        const categories = document.querySelectorAll('.category');
        categories.forEach(category => {
            const categoryName = category.querySelector('.category-header h3').textContent;
            const rows = category.querySelectorAll('.subcategory-table tr');
            
            rows.forEach(row => {
                const name = row.querySelector('.subcategory-name span').textContent;
                const quantity = parseInt(row.querySelector('.quantity-value').textContent);
                const price = parseFloat(row.querySelector('.subcategory-price').textContent);
                
                if (quantity > 0) {
                    items.push({
                        name: name,
                        quantity: quantity,
                        price: price,
                        total: quantity * price
                    });
                    
                    total += quantity * price;
                }
            });
        });
        
        // Sepeti güncelle
        cartItems.innerHTML = '';
        
        if (items.length > 0) {
            emptyCartMessage.style.display = 'none';
            
            items.forEach(item => {
                const itemElement = document.createElement('div');
                itemElement.className = 'cart-item';
                itemElement.innerHTML = `
                    <div class="cart-item-name">
                        <span class="cart-item-quantity">x${item.quantity}</span>
                        <span>${item.name}</span>
                    </div>
                    <div class="cart-item-price">${item.total.toFixed(2)} ₺</div>
                `;
                cartItems.appendChild(itemElement);
            });
            
            cartTotalElement.textContent = `${total.toFixed(2)} ₺`;
        } else {
            emptyCartMessage.style.display = 'block';
            cartTotalElement.textContent = '0.00 ₺';
        }
    }

    // Modal fonksiyonları
    function openModal(modalId) {
        document.getElementById(modalId).style.display = 'block';
    }
    
    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
    }

    // Sayfa yüklendiğinde
    document.addEventListener('DOMContentLoaded', function() {
        // Tüm kategorileri kapalı hale getir
        const categories = document.querySelectorAll('.subcategory-container');
        categories.forEach(category => {
            category.style.maxHeight = null;
        });
        
        // Tab geçişleri
        const tabButtons = document.querySelectorAll('.tab-btn');
        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Aktif tab butonunu güncelle
                tabButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                // Aktif içeriği güncelle
                const tabId = this.getAttribute('data-tab');
                const tabPanes = document.querySelectorAll('.tab-pane');
                tabPanes.forEach(pane => pane.classList.remove('active'));
                document.getElementById(tabId).classList.add('active');
            });
        });
        
        // Modallar
        // Giriş yap butonu
        document.getElementById('loginBtn').addEventListener('click', function() {
            openModal('loginModal');
        });
        
        // Üye ol butonu
        document.getElementById('registerBtn').addEventListener('click', function() {
            openModal('registerModal');
        });
        
        // Modal kapatma 
        document.querySelectorAll('.close-modal').forEach(closeBtn => {
            closeBtn.addEventListener('click', function() {
                this.closest('.modal').style.display = 'none';
            });
        });
        
        // Modal formlar arası geçiş
        document.getElementById('showRegisterLink').addEventListener('click', function(e) {
            e.preventDefault();
            closeModal('loginModal');
            openModal('registerModal');
        });
        
        document.getElementById('showLoginLink').addEventListener('click', function(e) {
            e.preventDefault();
            closeModal('registerModal');
            openModal('loginModal');
        });
        
        // Sipariş Ver butonuna tıklama işlevi
        document.getElementById('orderButton').addEventListener('click', function() {
            const activeTabId = document.querySelector('.tab-btn.active').getAttribute('data-tab');
            
            let customerInfo = {};
            let isValid = true;
            
            // Seçilen sekmeye göre bilgileri kontrol et
            if (activeTabId === 'dine-in') {
                const tableNumber = document.getElementById('tableNumber').value;
                
                if (!tableNumber || tableNumber.trim() === '') {
                    alert('Lütfen masa numarası giriniz!');
                    isValid = false;
                } else {
                    customerInfo.type = 'dine-in';
                    customerInfo.tableNumber = tableNumber;
                }
            } 
            else if (activeTabId === 'takeaway') {
                const name = document.getElementById('customerName').value;
                const phone = document.getElementById('customerPhone').value;
                const pickupTime = document.getElementById('pickupTime').value;
                
                if (!name || name.trim() === '') {
                    alert('Lütfen adınızı giriniz!');
                    isValid = false;
                } else if (!phone || phone.trim() === '') {
                    alert('Lütfen telefon numaranızı giriniz!');
                    isValid = false;
                } else {
                    customerInfo.type = 'takeaway';
                    customerInfo.name = name;
                    customerInfo.phone = phone;
                    customerInfo.pickupTime = pickupTime;
                }
            } 
            else if (activeTabId === 'delivery') {
                const name = document.getElementById('deliveryName').value;
                const phone = document.getElementById('deliveryPhone').value;
                const address = document.getElementById('deliveryAddress').value;
                
                if (!name || name.trim() === '') {
                    alert('Lütfen adınızı giriniz!');
                    isValid = false;
                } else if (!phone || phone.trim() === '') {
                    alert('Lütfen telefon numaranızı giriniz!');
                    isValid = false;
                } else if (!address || address.trim() === '') {
                    alert('Lütfen adresinizi giriniz!');
                    isValid = false;
                } else {
                    customerInfo.type = 'delivery';
                    customerInfo.name = name;
                    customerInfo.phone = phone;
                    customerInfo.address = address;
                }
            }
            
            if (!isValid) return;
            
            // Sipariş verilerini topla
            const orderItems = [];
            const categories = document.querySelectorAll('.category');
            
            categories.forEach(category => {
                const categoryName = category.querySelector('.category-header h3').textContent;
                const items = category.querySelectorAll('.subcategory-table tr');
                
                items.forEach(item => {
                    const itemName = item.querySelector('.subcategory-name span').textContent;
                    const quantityElement = item.querySelector('.quantity-value');
                    const price = parseFloat(item.querySelector('.subcategory-price').textContent);
                    const quantity = parseInt(quantityElement.textContent);
                    
                    if (quantity > 0) {
                        orderItems.push({
                            category: categoryName,
                            name: itemName,
                            price: price,
                            quantity: quantity
                        });
                    }
                });
            });
            
            // Sipariş verileri kontrolü
            if (orderItems.length === 0) {
                alert('Lütfen en az bir ürün seçiniz!');
                return;
            }
            
            // Sipariş notu
            const orderNote = document.getElementById('orderNote').value;
            
            // Sipariş verilerini hazırla
            const orderData = {
                customerInfo: customerInfo,
                items: orderItems,
                orderDate: new Date().toISOString(),
                note: orderNote
            };
            
            // Order/Index sayfasına yönlendir
            const orderDataParam = encodeURIComponent(JSON.stringify(orderData));
            window.location.href = `/Order/Index?orderData=${orderDataParam}`;
        });
        
        // İlk yüklemede sepeti güncelle
        updateCart();
    });
    
    // Sayfa tıklaması ile modalları kapat
    window.addEventListener('click', function(event) {
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
    });
</script>
