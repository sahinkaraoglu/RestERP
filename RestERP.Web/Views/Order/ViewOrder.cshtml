@model List<RestERP.Core.Doman.Entities.Order>

@{
    ViewData["Title"] = "Masa Siparişleri";
}

<div class="container mt-4">
    <h2>Masa Siparişleri</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bu masa için henüz sipariş bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                Sipariş No: @order.Id
                                <small class="text-muted">@order.CreatedDate</small>
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @item.Food.TurkishName
                                        <span class="badge bg-primary rounded-pill">@item.Quantity adet</span>
                                    </li>
                                }
                            </ul>
                            <div class="mt-3">
                                <strong>Toplam Tutar: </strong>@order.TotalAmount.ToString("C")
                            </div>
                            <div class="mt-2">
                                <strong>Durum: </strong>
                                <span class="badge @(order.Status == RestERP.Domain.Enums.OrderStatus.Completed ? "bg-success" : "bg-warning")">
                                    @order.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 