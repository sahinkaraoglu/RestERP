<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestERP - Restoran ERP</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestERP.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body class="d-flex flex-column h-100">
    <header class="restaurant-header">
        <nav class="custom-navbar">
            <div class="navbar-container">
                <div class="navbar-top">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <h1>RestERP Restaurant</h1>
                    </a>
                    <div class="divider">
                        <span>✦</span>
                    </div>
                </div>
                <div class="navbar-menu">
                    <div class="horizontal-menu">
                        <div class="menu-group-left">
                            <a class="menu-button" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            <a class="menu-button" asp-area="" asp-controller="Menu" asp-action="Index">Menü</a>
                            <a class="menu-button" asp-area="" asp-controller="Order" asp-action="Index">Sipariş</a>
                            <a class="menu-button" asp-area="" asp-controller="Reservation" asp-action="Index">Rezervasyon</a>
                        </div>
                        <div class="menu-group-right">
                            <a class="menu-button" asp-area="Admin" asp-controller="Panel" asp-action="Index">Panel</a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="user-welcome">Hoş geldin, @User.Identity.Name</span>
                                <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="menu-button logout-btn">Çıkış Yap</button>
                                </form>
                            }
                            else
                            {
                                <a class="menu-button" asp-area="" asp-controller="Login" asp-action="Index">Giriş</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1 px-0">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-slim mt-auto">
        <div class="container">
            <div class="footer-content">
                <div class="row">
                    <div class="col-md-6 footer-info">
                        <h3>RestERP Restaurant</h3>
                        <div class="divider-small">
                            <span>❦</span>
                        </div>
                        <p>Türk ve dünya mutfağından eşsiz lezzetler sunan restoranımıza hoş geldiniz.</p>
                        <p>Adres: İstanbul, Türkiye</p>
                        <p>Telefon: +90 555 123 4567</p>
                        <p>E-posta: info@resterp.com</p>
                        <p>&copy; 2025 - RestERP Modern bir Restoran ERP uygulamasıdır.</p>
                    </div>
                    <div class="col-md-6 footer-map">
                        <h3>Konum</h3>
                        <div class="map-container">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d228498.74572683615!2d28.878958321432243!3d41.028258998128415!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVs!5e1!3m2!1str!2str!4v1747585776045!5m2!1str!2str" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <style>
        html, body {
            height: 100%;
        }
        
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #faf7f2;
            color: #5a5348;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        .flex-grow-1 {
            flex: 1 0 auto;
        }
        
        .restaurant-header {
            background-color: #fffcf7;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            border-bottom: 1px solid #f0e9df;
            margin-bottom: 0;
        }
        
        .custom-navbar {
            max-width: 1140px;
            margin: 0 auto;
            padding: 15px;
        }
        
        .navbar-container {
            text-align: center;
        }
        
        .navbar-top {
            margin-bottom: 6px;
        }
        
        .navbar-brand h1 {
            font-size: 2.3rem;
            font-weight: 500;
            color: #5d4b38;
            margin-bottom: 2px;
            font-family: 'Lora', serif;
            letter-spacing: 1.2px;
            text-decoration: none;
        }
        
        .navbar-brand:hover {
            text-decoration: none;
        }
        
        .divider {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 5px auto;
            max-width: 450px;
            position: relative;
        }
        
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(to right, transparent, #e2d7c7, transparent);
        }
        
        .divider span {
            padding: 0 15px;
            color: #b8a88d;
            font-size: 1.1rem;
            position: relative;
            display: inline-block;
        }
        
        .horizontal-menu {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            margin: 10px 0;
            width: 100%;
        }
        
        .menu-group-left, .menu-group-right {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 10px;
        }
        
        .menu-button {
            display: inline-block;
            font-size: 1.1rem;
            color: #6a563d;
            font-weight: 400;
            padding: 5px 15px;
            margin: 0 8px;
            text-decoration: none;
            position: relative;
            border: 1px solid #e6dfd4;
            border-radius: 6px;
            background-color: #fdfaf5;
            transition: all 0.4s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
        }
        
        .menu-button:hover {
            color: #4a3c2e;
            background-color: #f7f2e8;
            border-color: #d6c8b4;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }
        
        .footer-slim {
            background-color: #fffcf7;
            color: #9b8977;
            padding: 40px 0 20px;
            font-family: 'Lora', serif;
            font-size: 0.9rem;
            border-top: 1px solid #f0e9df;
            flex-shrink: 0;
        }
        
        .footer-content {
            text-align: left;
        }
        
        .footer-info h3, .footer-map h3 {
            font-size: 1.3rem;
            color: #6a563d;
            margin-bottom: 10px;
            font-weight: 600;
        }
        
        .footer-info p {
            margin: 8px 0;
            font-size: 0.95rem;
        }
        
        .map-container {
            border-radius: 6px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-top: 15px;
        }
        
        .divider-small {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin: 10px 0 15px;
            max-width: 170px;
        }
        
        .divider-small::before,
        .divider-small::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(to right, transparent, #e2d7c7, transparent);
        }
        
        .divider-small span {
            padding: 0 12px;
            color: #b8a88d;
            font-size: 0.9rem;
        }
        
        .user-welcome {
            color: #6a563d;
            font-size: 1rem;
            font-weight: 500;
            white-space: nowrap;
            margin-right: 5px;
        }

        .logout-btn {
            background-color: #f8f4ed;
            border-color: #e6dfd4;
            color: #6a563d;
            cursor: pointer;
            font-size: 1.1rem;
            padding: 5px 15px;
            margin: 0 8px;
            border: 1px solid #e6dfd4;
            border-radius: 6px;
            transition: all 0.4s ease;
        }

        .logout-btn:hover {
            background-color: #f0e9df;
            border-color: #d6c8b4;
            color: #4a3c2e;
        }
        
        @@media (max-width: 768px) {
            .navbar-brand h1 {
                font-size: 1.8rem;
            }
            
            .horizontal-menu {
                flex-direction: column;
                align-items: center;
            }
            
            .menu-group-left, .menu-group-right {
                justify-content: center;
                width: 100%;
                margin-bottom: 5px;
            }
            
            .menu-button {
                margin: 3px 6px;
                font-size: 1rem;
                padding: 5px 12px;
            }
            
            .footer-info, .footer-map {
                text-align: center;
                margin-bottom: 20px;
            }
            
            .divider-small {
                margin: 10px auto 15px;
            }
            
            .map-container {
                max-width: 100%;
                height: 200px;
            }
            
            .map-container iframe {
                height: 200px;
            }
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
